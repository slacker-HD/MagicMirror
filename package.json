{
    "name": "magicmirror",
    "productName": "magicmirror",
    "version": "0.0.1",
    "description": "My Electron application for magicmirror",
    "main": "main-process/main.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint src --color",
        "package-debarmhf": "electron-installer-debian --src out/magicmirror-linux-armv7l/ --dest out/installers/ --arch armhf --config assets/config.json"
    },
    "keywords": [],
    "author": "hudi",
    "license": "MIT",
    "config": {
        "forge": {
            "make_targets": {
                "win32": [
                    "squirrel"
                ],
                "darwin": [
                    "zip"
                ],
                "linux": [
                    "deb",
                    "rpm"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "npm",
                "asar": true,
                "quiet": true,
                "icon": "assets/app-icon/app"
            },
            "electronWinstallerConfig": {
                "name": "magicmirror"
            },
            "electronInstallerDebian": {},
            "electronInstallerRedhat": {},
            "github_repository": {
                "owner": "",
                "name": ""
            },
            "windowsStoreConfig": {
                "packageName": "",
                "name": "magicmirror"
            }
        }
    },
    "dependencies": {
        "baidu-aip-sdk": "^2.3.9",
        "cheerio": "^1.0.0-rc.3",
        "electron-compile": "^6.4.4",
        "electron-squirrel-startup": "^1.0.0",
        "mic": "^2.1.2",
        "node-hotworddetector": "^1.3.0",
        "node-record-lpcm16": "^0.3.1",
        "rss-parser": "^3.7.2",
        "scanf": "^1.0.2"
    },
    "devDependencies": {
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "electron-forge": "^5.2.4",
        "electron-prebuilt-compile": "4.0.0",
        "eslint": "^6.0.1",
        "eslint-config-airbnb": "^17.1.1",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.14.2"
    }
}
